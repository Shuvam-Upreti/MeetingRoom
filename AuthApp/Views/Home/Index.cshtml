@using MeetingRoom.Models
@model IEnumerable<RoomModel>

@{
    ViewData["Title"] = "Home Page";
}
<partial name="_Notification" />
<br />
<div>
    <div>

        <h3 class="display-4">Meeting Rooms</h3>

    </div>
    <br />
    <br />

    @if (Model != null)
    {
        <a asp-controller="Booking" asp-action="Create" style="text-decoration:none">

            <div class=" row pb-2 " style="display:flex; ">

                @foreach (var room in Model)
                {
                    <div class="col-lg-3 col-md-6" style="display:flex; flex-direction: row; margin-bottom:50px">

                        <div class="btn btn-secondary" style="display: flex; flex-direction: column; width: 250px; height: 250px; border-radius: 0; overflow: hidden; border: none; cursor: pointer;">
                            <div style="flex: 1; display: flex; justify-content: center; align-items: center; overflow:hidden ">
                                <img src="@room.ImageUrl" alt="Room Photo" style="max-width: 100%; max-height: 100%;" />
                            </div>
                            <div style=" text-align: left; ">
                                <p>Name: @room.RoomName</p>
                                <div style="display:flex;justify-content:space-between">
                                    <div style="display:inline-block; ">
                                        <p>Capacity: @room.Capacity</p>

                                    </div>
                                    <div>
                                        <p class="text-center " style=" padding-top:3px;width: 60px; height: 20px; margin-right: 5px; background-color:green;color:white;font-weight:bold; font-size:11px">Available</p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </a>

    }
    else
    {
        <p>No rooms available.</p>
    }
</div>
